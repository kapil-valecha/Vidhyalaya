@model IEnumerable<Vidhyalaya.DB.UserRegistration>

@{
    ViewBag.Title = "TeacherProfile";
    Layout = "~/Views/Shared/LogOut.cshtml";
}

<h2>TeacherProfile</h2>

<p>
    <a type="button" class="btn btn-primary btn-sm"
       href="@Url.Action("Welcome", "Teacher", new { area = "" })">
        <span class="glyphicon glyphicon-list"></span>
        <span>Back to Main menu</span>
    </a>

</p>

<table class="table table-striped">
    
        @foreach (var item in Model)
        {

        <tr>
            <th>
                FirstName:
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
        </tr>

        <tr>
            <th>
                Last Name:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
        </tr>

        <tr>
            <th>
                Gender:
            </th>

            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
        </tr>
        <tr>
            <th>
                DOB:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
        </tr>
        <tr>
            <th>
                EmailId:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
        </tr>


        <tr>
            <th>
                Address Line 01:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressTextBox1)
            </td>
        </tr>


        <tr>
            <th>
                Address Line 02:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.AddressTextBox2)
            </td>
        </tr>
        <tr>
            <th>
                Country:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Country.CountryName)
            </td>
        </tr>
        <tr>
            <th>
                State:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.State.StateName)
            </td>
        </tr>
        <tr>
            <th>
                City:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City.CityName)
            </td>
        </tr>
        <tr>
            <th>
                Pincode:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Pincode)
            </td>
        </tr>
        <tr>
            <th>
                Hobby:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Hobby)
            </td>
        </tr>
        <tr>
            <th>
                Course:
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
        </tr>


        <tr>
            <td colspan="2">
                @Html.ActionLink("Edit", "EditUser", new { id = item.UserId }) |
                @Html.ActionLink("View Students", "AllStudentDetails", new { id = item.CourseId })
            </td>
        </tr>

    }

    </table>



