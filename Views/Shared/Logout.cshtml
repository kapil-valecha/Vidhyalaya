
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav navbar-left">
                    @if (Convert.ToInt32(Session["RoleId"]) == 1)
                    {
                        <li>
                            @Html.ActionLink("Vidhyalaya", "Welcome", "SuperAdmin", new { area = "" }, new { @class = "navbar-brand" })
                        </li>
                    }
                    else if (Convert.ToInt32(Session["RoleId"]) == 2)
                    {
                        <li>
                            @Html.ActionLink("Vidhyalaya", "Welcome", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        </li>

                    }
                    else if (Convert.ToInt32(Session["RoleId"]) == 3)
                    {
                        <li>
                            @Html.ActionLink("Vidhyalaya", "Welcome", "Teacher", new { area = "" }, new { @class = "navbar-brand" })
                        </li>

                    }
                    else if (Convert.ToInt32(Session["RoleId"]) == 4)
                    {
                        <li>
                            @Html.ActionLink("Vidhyalaya", "StudentsProfile", "Student", new { area = "" }, new { @class = "navbar-brand" })
                        </li>

                    }

                    <li>@Html.Partial("_AdminPartial")</li>
                </ul>

            </div>

            <ul class="nav navbar-nav navbar-right">
             
                <li>@Html.ActionLink("LogOut", "LogOut", "UserLogin", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

            </ul>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - kapil valecha's Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Admin")
    @RenderSection("scripts", required: false)
</body>

