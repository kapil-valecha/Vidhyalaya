@model IEnumerable<Vidhyalaya.DB.SubjectInCourse>

@{
    ViewBag.Title = "SubjectList";
    Layout = "~/Views/Shared/LogOut.cshtml";
}

<h2>Subject List</h2>

@if (Session["UserId"] != null)
{
    <h4>Hello @Session["UserName"].ToString()</h4>
}

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Course")
                </th>
                <th>
                    @Html.DisplayName("Subject")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                    </td>
                </tr>
            }

        </table>
        <p>
            @Html.ActionLink("My Profile", "StudentProfile")
        </p>
